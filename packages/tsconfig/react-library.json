{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "composite": true,
    "jsx": "react-jsx"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
